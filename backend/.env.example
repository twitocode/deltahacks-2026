# Beacon.ai SAR Backend Environment Variables
# Copy to .env and customize

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# DEM data directory (relative to backend folder or absolute)
DEM_DATA_DIR=../data/elevation/merit

# Safety limits
MAX_RADIUS_KM=50.0
MIN_GRID_RESOLUTION_M=30.0
DEFAULT_GRID_RESOLUTION_M=100.0

# Simulation settings
NUM_AGENTS=1000
TIMESTEP_MINUTES=15
MAX_SIMULATION_HOURS=18

# Overpass API for OSM data
OVERPASS_API_URL=https://overpass-api.de/api/interpreter

# CORS origins (comma-separated)
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]
